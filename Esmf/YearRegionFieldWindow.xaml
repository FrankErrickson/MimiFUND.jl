<Window x:Class="Esmf.YearRegionFieldWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
    Title="YearRegionFieldWindow" Height="300" Width="300" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBar>
            <Button Click="Button_Click" Content="Save data..."/>
        </ToolBar>

        <d3:ChartPlotter Name="plotter" Grid.Row="1">
        <d3:Header Name="plotterHeader" TextBlock.FontSize="20">
          Very simple chart
        </d3:Header>

        <d3:VerticalAxisTitle>value</d3:VerticalAxisTitle>
        <d3:HorizontalAxisTitle>year</d3:HorizontalAxisTitle>
      </d3:ChartPlotter>
    </Grid>
</Window>
